        },
        }
      });
    </script>

    <!-- 상세페이지 이동 -->
    <script>
      function move(movieIdx) {
      const detailPageURL = `/detail/${movieIdx}`;
      console.log('selectedMovieIdx: ', movieIdx)
      window.location.href = detailPageURL;
    }
    </script>

  </body>
</html>