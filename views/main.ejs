        // 좋아요 클릭 시
        function clickLike(heart, commentid) {
          const isLiked = heart.classList.contains('heart-active');
          const heartIcons = document.querySelectorAll('.heart-icon'); // twice

          axios({
            method: 'post',
            url: '/mypage/mycommentlike',
            data: {
              commentid: commentid,
              reClick: isLiked
            }
          })
          .then((res) => {
            if (res.data.result) {
              heart.classList.toggle('heart-active');
            } else {
              alert(res.data.error);
            }
          })
          .catch(error => {
            console.error('좋아요 클릭 err : ', error);
          });
        }
    </script>

